<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/actualPageShit">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffa34a"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/custom_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedley"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Add more ingredients..."
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="false"
            android:password="false"
            android:textColor="#ffa34a"
            android:textColorHint="#ffa34a"
            android:textIsSelectable="false"
            android:dropDownWidth="230dp"
            android:dropDownHeight="43dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:background="#ffffffff"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imagePreview"
            android:src="@drawable/ic_action_search"
            android:layout_toEndOf="@+id/autoCompleteTextView1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:paddingRight="0dp"
            android:layout_gravity="top"
            android:paddingTop="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/settings"
            android:src="@drawable/settings"
            android:layout_toEndOf="@+id/autoCompleteTextView1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:layout_marginTop="-5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:divider="#ff454545"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:clickable="true"
        android:smoothScrollbar="true" />


</RelativeLayout>