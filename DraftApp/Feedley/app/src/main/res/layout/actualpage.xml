<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/actualPageShit">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffa34a"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:id="@+id/searchLogo"
            android:src="@drawable/search_bar_logo"
            android:paddingLeft="7dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginBottom="-2dp"
            android:layout_marginRight="2dp" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Add more ingredients..."
            android:padding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="false"
            android:password="false"
            android:textColor="#ffa34a"
            android:textColorHint="#ffa34a"
            android:textIsSelectable="false"
            android:dropDownWidth="230dp"
            android:dropDownHeight="43dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="0dp"
            android:background="#ffffffff"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_action_search"
            android:layout_toEndOf="@+id/autoCompleteTextView1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:paddingRight="0dp"
            android:layout_gravity="top"
            android:paddingTop="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/settings"
            android:src="@drawable/settings"
            android:layout_toEndOf="@+id/autoCompleteTextView1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:layout_marginTop="-5dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
     <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff1"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff2"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff3"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff4"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff5"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff6"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff7"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff8"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff9"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:id="@+id/foodStuff10"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

     </ScrollView>
   </LinearLayout>
</RelativeLayout>