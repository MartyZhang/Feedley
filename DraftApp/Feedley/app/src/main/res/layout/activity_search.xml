<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffa34a"
    android:id="@+id/background"
    tools:context=".SearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/custom_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedley"
            android:textSize="40dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/search_bar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="180dp">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Type an ingredient..."
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="false"
                android:password="false"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:textIsSelectable="false"
                android:background="@android:color/transparent"
                android:popupBackground ="#7cb2d7cf"
                android:dropDownWidth="235dp"
                android:dropDownHeight="30dp"
                android:dropDownVerticalOffset= "1dp"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/imageView"
                android:src="@drawable/ic_action_search"
                android:layout_toEndOf="@+id/autoCompleteTextView1"
                android:layout_marginBottom="172dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/autoCompleteTextView1"
                android:layout_alignEnd="@+id/autoCompleteTextView1"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:paddingRight="5dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
